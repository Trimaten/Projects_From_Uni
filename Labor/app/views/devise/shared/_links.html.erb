<%# app/views/devise/shared/_links.html.erb %>

<div class="text-gray-600 text-sm flex flex-col justify-center items-center gap-y-1">

  <%# CONDITION ADJUSTED HERE: Show "Log in" link if NOT on sessions controller AND NOT on registrations controller, OR if on registrations controller. This ensures it's always visible EXCEPT on the login page itself. %>
  <%- if (controller_name != 'sessions' && controller_name != 'registrations') || controller_name == 'registrations' %>
    <%= link_to "Log in", new_session_path(resource_name), class: "text-indigo-600 hover:underline font-medium" %>
  <% end %>

  <%# "Sign up" link %>
  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <span>New to Wave? <%= link_to "Sign up", new_registration_path(resource_name), class: "text-indigo-600 hover:underline font-medium" %></span>
  <% end %>

  <%# "Forgot your password?" link %>
  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-indigo-600 hover:underline font-medium" %>
  <% end %>

  <%# "Didn't receive confirmation instructions?" link %>
  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "text-indigo-600 hover:underline font-medium" %>
  <% end %>

  <%# Other Devise links %>
  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "text-indigo-600 hover:underline font-medium" %>
  <% end %>

  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= button_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: "inline-flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    <% end %>
  <% end %>
</div>