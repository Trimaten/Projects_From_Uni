<div class="flex items-center justify-center min-h-screen bg-white px-4 py-8 mt-[-56px]">
  <div class="w-full max-w-4xl flex flex-col md:flex-row gap-8">
    <div class="md:w-2/3 p-6 border rounded-lg shadow-md bg-gray-50">
      <h1 class="text-4xl font-extrabold text-gray-900 mb-4">
        <%= @workflow.title %>
      </h1>

      <div class="flex items-center text-gray-600 mb-6">
        <svg class="h-5 w-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>
        </svg>
        <span class="font-medium">Author:</span>
        <span class="ml-2 text-gray-800"><%= @author.username %></span>
      </div>

      <% if @workflow.respond_to?(:description) && @workflow.description.present? %>
        <h2 class="text-xl font-semibold text-gray-800 mb-2">Description:</h2>
        <p class="text-gray-700 leading-relaxed mb-6"><%= @workflow.description %></p>
      <% end %>

      <h2 class="text-xl font-semibold text-gray-800 mb-3">Workflow Stages (<%= @number_of_stages %>):</h2>
      <% if @stages.any? %>
        <ul class="space-y-3">
          <% @stages.each_with_index do |stage, position| %>
            <li class="flex items-center p-3 bg-white rounded-md shadow-sm border border-gray-200">
              <span class="flex-shrink-0 w-8 h-8 flex items-center justify-center rounded-full bg-indigo-100 text-indigo-700 font-bold text-sm mr-3">
                <%= position + 1 %>
              </span>
              <div>
                <p class="text-lg font-medium text-gray-900"><%= stage.title %></p>
                <% if stage.user.present? %>
                  <p class="text-sm text-gray-600">Assigned to: <%= stage.user.username %></p>
                <% end %>
              </div>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p class="text-gray-500">No stages defined for this workflow yet.</p>
      <% end %>
    </div>

    <div class="md:w-1/3 flex flex-col justify-between p-6 border rounded-lg shadow-md bg-white">

      <div class="mt-auto">
        <%= button_to 'Start Workflow', start_workflow_overview_path(@workflow.id), method: :get, class: "w-full flex justify-center py-3 px-4 border border-transparent rounded-md shadow-sm text-lg font-medium text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" %>
      </div>
    </div>
  </div>
</div>